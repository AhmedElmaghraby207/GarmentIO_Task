<%include ../partials/header.ejs%>

<div class="container">
  <form method="POST" action="/garment-employee/add">
    <fieldset>
      <h2 class="text-center">Adding new employee</h2>

      <div class="form-group">
        <label for="empName">Employee Name</label>
        <input
          name="name"
          type="text"
          class="form-control"
          id="empName"
          placeholder="Enter name"
        />
      </div>
      <div class="form-group">
        <label for="empAge">Employee Age</label>
        <input
          name="age"
          type="number"
          class="form-control"
          id="empAge"
          placeholder="Enter age"
        />
      </div>
      <input type="submit" value="Add" class="form-control btn btn-block btn-success"></input>
    </fieldset>
  </form>
</div>

<%include ../partials/footer.ejs%>
